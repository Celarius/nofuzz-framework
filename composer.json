{
  "name": "nofuzz/nofuzz",
  "description": "A PHP nano framework for REST API's",
  "keywords": [
    "Framework",
    "REST",
    "API",
    "Micro Service"
  ],
  "homepage": "http://nofuzz.celarius.com",
  "type": "framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Kim Sandell",
      "email": "sandell@celarius.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "ext-PDO": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",

    "guzzlehttp/guzzle": "^6.2",
    "nikic/fast-route": "^1.1",
    "psr/simple-cache": "^1.0",
    "monolog/monolog": "^1.22",
    "firebase/php-jwt": "^4.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.5"
  },
  "autoload": {
    "psr-4": {
      "Nofuzz\\": "nofuzz/",
      "App\\": "app/"
    },
    "classmap": []
  }
}