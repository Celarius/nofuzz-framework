{
  "name": "nofuzz/framework",
  "description": "A PHP nano framework for REST API's & Micro-Services",
  "keywords": [
    "php7",
    "php-framework",
    "framework",
    "api",
    "rest",
    "rest-api",
    "MicroService"
  ],
  "homepage": "http://nofuzz.celarius.com",
  "type": "framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Kim Sandell",
      "email": "sandell@celarius.com"
    }
  ],
  "require": {
    "php": "^7.0",
    "ext-PDO": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-apc": "*",

    "guzzlehttp/guzzle": "^6.2",
    "nikic/fast-route": "^1.1",
    "psr/simple-cache": "^1.0",
    "monolog/monolog": "^1.22",
    "firebase/php-jwt": "^4.0"
  },
  "autoload": {
    "psr-4": {
      "Nofuzz\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0"
  }
}
